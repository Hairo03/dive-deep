@{
	ViewData["Title"] = "Home";
}


<section class="Hero"
		 style="background-image: url('/pictures/hero.jpg'); background-size: cover; background-position: center; height: 400px; display: flex; align-items: center; justify-content: center; color: white; text-align: center;">
	<div class="hero-content">
		<svg viewbox="0 0 100 20">
			<defs>
				<linearGradient id="gradient" x1="0" x2="0" y1="0" y2="1">
					<stop offset="15%" stop-color="#0f9efc" />
					<stop offset="85%" stop-color="#123752" />
				</linearGradient>
				<pattern id="wave" x="0" y="0" width="120" height="40" patternUnits="userSpaceOnUse">
					<path id="wavePath" d="M-40 9 Q-30 7 -20 9 T0 9 T20 9 T40 9 T60 9 T80 9 T100 9 T120 9 V20 H-40z" mask="url(#mask)" fill="url(#gradient)">
						<animateTransform attributeName="transform"
										  begin="0s"
										  dur="1.5s"
										  type="translate"
										  from="0,0"
										  to="40,0"
										  repeatCount="indefinite" />
					</path>
				</pattern>
			</defs>
			<text text-anchor="middle" x="50" y="15" font-size="19" fill="url(#wave)" fill-opacity="1">DIVE DEEP</text>
			<text text-anchor="middle" x="50" y="15" font-size="19" fill="url(#gradient)" fill-opacity="0.6">DIVE DEEP</text>
		</svg>
		<p style="font-size: 34px; text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.7);">Kvalitetsudstyr til alle dine dykkerbehov</p>
		<a href="/Produkter" class="btn btn-custom" style="margin-top: 20px; color:unset; padding: 10px 20px; font-size: 18px;">Shop Nu</a>
	</div>
</section>
<section class="about">
	<div class="about-text">
		<h2>Hvem er vi?</h2>
		<p>
			Vi startede Dive Deep for at dele vores passion for havet.
			Vores mål er at levere udstyr af høj kvalitet, så alle kan opleve magien under vandet –
			fra nybegyndere til professionelle dykkere.
		</p>
	</div>
</section>

<section class="categories">
	<h2>Kategorier </h2>

	<div class="category-grid">
		<a href="Products/index/0" style="text-decoration: none; color: inherit;">
			<div class="category-box">
				<img src="~/pictures/BCD.jpg" alt="BCD'er" />
				<h3>BCD'er</h3>
			</div>
		</a>
		<a href="Products/index/2" style="text-decoration: none; color: inherit;">
			<div class="category-box">
				<img src="~/pictures/Dykkerdragt.jpg" alt="Dykkerdragter" />
				<h3>Dykkerdragter</h3>
			</div>
		</a>
		<a href="Products/index/6" style="text-decoration: none; color: inherit;">
			<div class="category-box">
				<img src="~/pictures/scuba tank.jpg" alt="Tanke" />
				<h3>Tanke</h3>
			</div>
		</a>
		<a href="Products/index/1" style="text-decoration: none; color: inherit;">
			<div class="category-box">
				<img src="~/pictures/Regulator.jpg" alt="Regulatorsæt" />
				<h3>Regulatorsæt</h3>
			</div>
		</a>
		<a href="Products/index/5" style="text-decoration: none; color: inherit;">
			<div class="category-box">
				<img src="~/pictures/Maske.jpg" alt="Maske/Snorkel"/>
				<h3>Maske/Snorkel</h3>
			</div>
		</a>
		<a href="Products/index/3" style="text-decoration: none; color: inherit;">
			<div class="category-box">
				<img src="~/pictures/finner.jpg" alt="Finner" />
				<h3>Finner</h3>
			</div>
		</a>
	</div>
</section>

<style>
	.categories {
		text-align: center;
		padding: 50px 20px;
		background: linear-gradient(to right, #0f2027, #203a43, #2c5364);
	}

		.categories h2 {
			font-size: 2rem;
			color: white;
			margin-bottom: 30px;
		}

	.category-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 20px;
		max-width: 1000px;
		margin: 0 auto;
	}

	.category-box {
		background: white;
		border-radius: 12px;
		box-shadow: 4px 8px 12px rgba(0,0,0,0.2);
		transition: transform 0.3s ease, box-shadow 0.3s ease;
		cursor: pointer;
		padding: 15px;
	}

		.category-box img {
			width: 100%;
			height: 150px;
			object-fit: cover;
			border-radius: 8px;
		}

		.category-box h3 {
			margin-top: 15px;
			font-size: 1.2rem;
			color: #003366;
		}

		.category-box:hover {
			transform: translateY(-5px);
			box-shadow: 10px 15px 15px rgba(0,0,0,0.3);
		}
</style>
