				<div class="carousel-item active">
					<div class="d-flex justify-content-center gap-3">
						<div class="card" style="width: 18rem;">
							<img src="~/pictures/Divingplaceholder.jpg" class="card-img-top" alt="Navigator Lite BCD">
							<div class="card-body">
								<h5 class="card-title">Navigator Lite BCD</h5>
								<p class="fw-bold">125 DKK pr. Dag</p>
								<a href="/Cart/Add/1" class="btn btn-custom">Add to Cart</a>
							</div>
						</div>
						<div class="card" style="width: 18rem;">
							<img src="~/pictures/Divingplaceholder.jpg" class="card-img-top" alt="BCD Glide">
							<div class="card-body">
								<h5 class="card-title">BCD Glide</h5>
								<p class="fw-bold">100 DKK pr. Dag</p>
								<a href="/Cart/Add/2" class="btn btn-custom">Add to Cart</a>
							</div>
						</div>
						<div class="card" style="width: 18rem;">
							<img src="~/pictures/Divingplaceholder.jpg" class="card-img-top" alt="Definition">
							<div class="card-body">
								<h5 class="card-title">Definition</h5>
								<p class="fw-bold">100 DKK pr. Dag</p>
								<a href="/Cart/Add/3" class="btn btn-custom">Add to Cart</a>
							</div>
						</div>
					</div>
				</div>

				
				<div class="carousel-item">
					<div class="d-flex justify-content-center gap-3">
						<div class="card" style="width: 18rem;">
							<img src="~/pictures/Divingplaceholder.jpg" class="card-img-top" alt="Regulator">
							<div class="card-body">
								<h5 class="card-title">MK25 Regulator</h5>
								<p class="fw-bold">150 DKK pr. Dag</p>
								<a href="/Cart/Add/4" class="btn btn-custom">Tilføj til kurv</a>
							</div>
						</div>
						<div class="card" style="width: 18rem;">
							<img src="~/pictures/Divingplaceholder.jpg" class="card-img-top" alt="Maske">
							<div class="card-body">
								<h5 class="card-title">Synergy Twin Mask</h5>
								<p class="fw-bold">75 DKK pr. Dag</p>
								<a href="/Cart/Add/5" class="btn btn-custom">Tilføj til kurv</a>
							</div>
						</div>
						<div class="card" style="width: 18rem;">
							<img src="~/pictures/Divingplaceholder.jpg" class="card-img-top" alt="Finner">
							<div class="card-body">
								<h5 class="card-title">Seawing Nova Finner</h5>
								<p class="fw-bold">90 DKK pr. Dag</p>
								<a href="/Cart/Add/6" class="btn btn-custom">Tilføj til kurv</a>
							</div>
						</div>
					</div>
				</div>

			</div>

			
			<button class="carousel-control-prev" type="button" data-bs-target="#popularProductsCarousel" data-bs-slide="prev">
				<span class="carousel-control-prev-icon"></span>
			</button>
			<button class="carousel-control-next" type="button" data-bs-target="#popularProductsCarousel" data-bs-slide="next">
				<span class="carousel-control-next-icon"></span>
			</button>
		</div>
	</div>
</section>



